[Unit]
Description=Hippocampus ingestion service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/sacred-brain
EnvironmentFile=-/etc/default/hippocampus-ingest
EnvironmentFile=-/etc/hippocampus-ingest.env
Environment=HIPPOCAMPUS_URL=http://localhost:54321
ExecStart=/opt/sacred-brain/.venv/bin/uvicorn ingest.hippocampus_ingest:app --host 0.0.0.0 --port 54322
Restart=on-failure
User=sacred
Group=sacred

[Install]
WantedBy=multi-user.target
